
%table.table
  %thead
    %tr
      %th id
      %th name
      %th hero

  %tbody
    - @talents.each do |talent|
      %tr
        %td= talent.id
        %td= talent.name
        %td= talent.hero.name
        %td= link_to 'Delete', talent_path(talent), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
